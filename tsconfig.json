    "declaration": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "target": "es5",
    "outDir": "dist",
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "rootDir": "src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}